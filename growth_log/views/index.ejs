<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
    <body>
        <div class="container py-4">
            <h1>A timeline of learnings</h1>
            <table class="table" style="width:100%">
            <% logs.forEach((item, index) => { %>
                <tr> 
                    <td><a href="logs/<%=item._id%>"><%=item.title%></a></td>
                    <td><%=item.description%></td>
                    <td><%=item.rate%></td>
                    <td><%=item._id%></td>
                </tr>
            <% }) %>
            </table>
            <a
                href="new"
                class="btn btn-primary"
            >
                new log
            </a>
        </div>
    </body>
</html>